<h2>Instagram Reels Downloader</h2>
<p>Paste link Reels Instagram di bawah</p>

<div class="box">
    <input id="url" placeholder="https://www.instagram.com/reel/xxxx">
    <button onclick="download()">Download</button>

    <div class="result" id="result"></div>
</div>

<script>
async function download() {
    const link = document.getElementById("url").value;
    const result = document.getElementById("result");

    if (!link) {
        result.innerHTML = "Masukkan URL dulu!";
        return;
    }

    result.innerHTML = "Memproses...";

    // API pihak ketiga
    const api = "https://saveig.app/api/ajaxSearch?link=" + encodeURIComponent(link);

    try {
        const res = await fetch(api);
        const data = await res.json();

        if (data?.data?.medias[0]?.url) {
            const video = data.data.medias[0].url;
            result.innerHTML = `
                <p>Video siap diunduh:</p>
                <a href="${video}" download>
                    <button>Download Video</button>
                </a>
                <br><br>
                <video width="300" controls src="${video}"></video>
            `;
        } else {
            result.innerHTML = "Gagal mengambil video. Link invalid atau API error.";
        }

    } catch (e) {
        result.innerHTML = "Error mengambil data!";
    }
}
</script>

